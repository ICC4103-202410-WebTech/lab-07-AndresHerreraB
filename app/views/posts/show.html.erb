<div class="container">
  <h1 style="color:blue"><%= @post.title %></h1>

  <p>
    <%= @post.content %>
  </p>

  <p>
    <strong>Autor:</strong> <%= @post.user.name %>
  </p>

  <p>
    <strong>Contacto:</strong> <%= @post.user.email %>
  </p>

  <p>
    <strong>Likes:</strong> <%= @post.likes_count %>
  </p>

  <p>
    <strong>Comentarios:</strong> <%= @post.answers_count %>
  </p>

  <p>
    <strong>Publicado el:</strong> <%= @post.published_at.strftime("%d/%m/%Y") %>
  </p>

  <!-- Aquí puedes agregar más campos si los necesitas -->

  <%= link_to 'Volver', posts_path, class: "btn btn-outline-primary" %>
</div>
